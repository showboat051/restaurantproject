    <div form="comments"></div>
    <div id="map"></div>
     <script src="https://maps.googleapis.com/maps/api/js?callback=initMap"async defer></script>
        <script>
      var map;
      function initMap() {
  var myLatLng = new google.maps.LatLng(<%= @restaurant.location.coordinate.latitude %>, <%= @restaurant.location.coordinate.longitude  %>);

  var map = new google.maps.Map(document.getElementById('map'), {
    zoom: 15,
    center: myLatLng
  });

  var marker = new google.maps.Marker({
    position: myLatLng,
    map: map,
    title: 'Go Eat!'
  });
}
       
    </script>

     

